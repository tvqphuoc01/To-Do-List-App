doctype html
head
  title Todo App
  link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
  link(rel='stylesheet', href='style.css')
  link(href='https://fonts.googleapis.com/css?family=Baloo+Bhai|Candal|Chewy&display=swap', rel='stylesheet')
  link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.8.2/css/all.css', integrity='sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay', crossorigin='anonymous')
.container-fluid
  .row
    .col-6.page-todo.bootstrap.snippets.bootdeys
        .tasks.fadeInDown
          .task-list
            h1 Tasks
            if highPriority
              each task in highPriority
                .priority.high
                  span high priority
                .task.high
                  .desc
                    .title= task.title
                    div= task.description
                  .time
                    .date= task.time
            if mediumPriority
              each task in mediumPriority
                .priority.medium
                  span medium priority
                .task.medium
                  .desc
                    .title= task.title
                    div= task.description
                  .time
                    .date= task.time
            if lowPriority
              each task in lowPriority
                .priority.low
                  span low priority
                .task.low
                  .desc
                    .title= task.title
                    div= task.description
                  .time
                    .date= task.time
            .clearfix
    .col-6
      .wrapper.fadeInDown
        #formContent
          // Tabs Titles
          // Icon
          .fadeIn.first
            i.far.fa-user-circle.fa-7x
          .container.button-group
            a(href="#")
              button.btn.btn-primary.btn-block(type='button') Your Profile
            a(href="/edit")
              button.btn.btn-success.btn-block(type='button') Edit and Add Task
            a(href="#")
              button.btn.btn-danger.btn-block(type='button') Log Out



